<?import javafx.scene.control.*?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>


<?import javafx.scene.control.Button?>
<GridPane alignment="CENTER" hgap="10" vgap="10" style="-fx-padding: 20;" xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.ex1.HelloController">

    <!-- Set Column Constraints -->
    <columnConstraints>
        <ColumnConstraints percentWidth="20"/>
        <ColumnConstraints percentWidth="20"/>
    </columnConstraints>

    <!-- Creating the Labels and Input Fields -->
    <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass=""/>
    <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="text field"/>

    <RadioButton fx:id="compField" GridPane.rowIndex="1" GridPane.columnIndex="4" styleClass="radio"/>
    <Label text="Computer Science" GridPane.rowIndex="1" GridPane.columnIndex="5" styleClass=""/>

    <RadioButton fx:id="businessField" GridPane.rowIndex="1" GridPane.columnIndex="6" styleClass="radio"/>
    <Label text="Business" GridPane.rowIndex="1" GridPane.columnIndex="7" styleClass=""/>

    <ComboBox fx:id="courseSelect" GridPane.rowIndex="2" GridPane.columnIndex="6" styleClass="combo box"/>

    <Label text="Address:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass=""/>
    <TextField fx:id="addressField" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="text field"/>

    <CheckBox fx:id="councilField" GridPane.rowIndex="2" GridPane.columnIndex="2" styleClass="checkbox"/>
    <Label text="Student Council" GridPane.rowIndex="2" GridPane.columnIndex="3" styleClass=""/>

    <ListView fx:id="courseList" GridPane.rowIndex="3" GridPane.columnIndex="6" GridPane.columnSpan="2" styleClass="list view"/>

    <Label text="Province:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass=""/>
    <TextField fx:id="provinceField" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="text field"/>

    <Label text="City:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass=""/>
    <TextField fx:id="cityField" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="text field"/>

    <Label text="Postal Code:" GridPane.rowIndex="5" GridPane.columnIndex="0" styleClass=""/>
    <TextField fx:id="postalField" GridPane.rowIndex="5" GridPane.columnIndex="1" styleClass="text field"/>

    <Label text="Phone Number:" GridPane.rowIndex="6" GridPane.columnIndex="0" styleClass=""/>
    <TextField fx:id="phoneField" GridPane.rowIndex="6" GridPane.columnIndex="1" styleClass="text field"/>

    <CheckBox fx:id="volunteerField" GridPane.rowIndex="6" GridPane.columnIndex="2" styleClass="checkbox"/>
    <Label text="Volunteer Work" GridPane.rowIndex="6" GridPane.columnIndex="3" styleClass=""/>

    <Label text="Email:" GridPane.rowIndex="7" GridPane.columnIndex="0" styleClass=""/>
    <TextField fx:id="emailField" GridPane.rowIndex="7" GridPane.columnIndex="1" styleClass="text field"/>

    <Button text="Display" fx:id="displayButton" GridPane.rowIndex="8" GridPane.columnIndex="0" styleClass="btn, btn-primary">
        <tooltip>
            <Tooltip styleClass="tooltip-info" text="Display Your Information"/>
        </tooltip>
    </Button>

    <!-- TextArea to display entry -->
    <TextArea fx:id="displayStudent" GridPane.rowIndex="9" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowSpan="7"/>
</GridPane>
